
# EditorConfig is a editor-agnostic configuration file to influence code editing.
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# TODO: I would like to enforce this, but someone with Windows should do it.
# # Unix-style newlines with a newline ending every file
# [*]
# end_of_line = lf

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
